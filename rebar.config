%-*-Erlang-*-
{erl_opts, [debug_info, {parse_transform, lager_transform}]}.

{deps, [
	{setup, "1.8.4"},
	{lager, "3.5.2"},
	{jobs, "0.7.0"},
	{jsx, "2.8.2"},
	{cowboy, "2.0.0"},
	{exometer_core, "1.5.2"},
	{erlando, {git, "https://github.com/travelping/erlando.git", {tag, "1.0.0"}}},
	{netdata, {git, "https://github.com/RoadRunnr/erl_netdata.git", {ref, "cbd6eaf"}}},
	{gtplib, {git, "https://github.com/travelping/gtplib.git", {ref, "3076385"}}},
	{gen_socket, {git, "git://github.com/travelping/gen_socket", {tag, "0.6.3"}}},
	{ergw_aaa, {git, "git://github.com/travelping/ergw_aaa", {ref, "68c9a90"}}}
]}.

{minimum_otp_vsn, "19.3"}.
{plugins, []}.

{profiles, [
	    {test, [
		    {erl_opts, [nowarn_export_all]},
		    {deps, [
			    {meck, "0.8.8"},
			    {proper, "1.2.0"}
			   ]}
		   ]}
	   ]}.

%% xref checks to run
{xref_checks, [locals_not_used, deprecated_function_calls,
		deprecated_funcqtions]}.
{xref_queries,
 [{"(XC - UC) || (XU - X - B
      - (\"ergw_sx\":\"validate_options\"/\"1\")
      - (\"ergw_sx\":\"start_link\"/\"1\")
      - (\"ergw_sx\":\"send\"/\"4\")
      - (\"ergw_sx\":\"get_id\"/\"1\")
      - (\"ergw_sx\":\"call\"/\"3\"))", []}]}.

{cover_enabled, true}.
{cover_export_enabled, true}.

%% development setting
{shell, [{config, "priv/dev.config"}]}.
